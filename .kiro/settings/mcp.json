{
  "mcpServers": {
    "mysql": {
      "command": "uvx",
      "args": [
        "mcp-server-mysql"
      ],
      "env": {
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "your_password",
        "MYSQL_DATABASE": "ry-vue"
      },
      "disabled": false,
      "autoApprove": [
        "list_tables",
        "describe_table",
        "fetch_data",
        "execute_query",
        "create_table"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token"
      },
      "disabled": false,
      "autoApprove": [
        "list_commits",
        "search_repositories",
        "get_file_contents",
        "create_repository"
      ]
    }
  }
}
